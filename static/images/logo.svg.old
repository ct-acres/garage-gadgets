<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg"
     width="800" height="40" viewBox="0 0 800 40">

  <!-- Color variables you can customize -->
  <style>
    :root {
      --logo-primary: #333333;   /* main logo color */
      --logo-contrast: #ffffff;  /* inner G + cutout color */
      --font: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }
  </style>

  <!-- GEAR + MONOGRAM -->
  <g transform="translate(0,0)">
    <!-- Teeth -->
    <g fill="var(--logo-primary)">
      <rect x="17" y="2" width="6" height="6" rx="1"/>
      <rect x="17" y="2" width="6" height="6" rx="1" transform="rotate(45 20 20)"/>
      <rect x="17" y="2" width="6" height="6" rx="1" transform="rotate(90 20 20)"/>
      <rect x="17" y="2" width="6" height="6" rx="1" transform="rotate(135 20 20)"/>
      <rect x="17" y="2" width="6" height="6" rx="1" transform="rotate(180 20 20)"/>
      <rect x="17" y="2" width="6" height="6" rx="1" transform="rotate(225 20 20)"/>
      <rect x="17" y="2" width="6" height="6" rx="1" transform="rotate(270 20 20)"/>
      <rect x="17" y="2" width="6" height="6" rx="1" transform="rotate(315 20 20)"/>

      <!-- Gear ring -->
      <circle cx="20" cy="20" r="14"/>
    </g>

    <!-- Inner circle (cutout space) -->
    <circle cx="20" cy="20" r="9.5" fill="var(--logo-contrast)"/>

    <!-- “G” letter inside gear -->
    <text x="20" y="20"
          font-family="var(--font)"
          font-size="12.5"
          font-weight="800"
          fill="var(--logo-contrast)"
          text-anchor="middle"
          dominant-baseline="middle">
      G
    </text>

    <!-- Horizontal G-bar -->
    <rect x="22.5" y="18.5" width="8" height="3" rx="0.5" fill="var(--logo-contrast)"/>
  </g>

  <!-- WORDMARK -->
  <g transform="translate(56,0)">
    <text x="0" y="20"
          font-family="var(--font)"
          font-size="16"
          font-weight="700"
          fill="var(--logo-primary)"
          dominant-baseline="middle">
      Garage &amp; Gadgets
    </text>
  </g>

</svg>
